package tests;

import java.util.StringTokenizer;

import utils.CaricamentoFile;

public class Tests04 {
	
	public static void main(String[] args) {
		CaricamentoFile caricamentoFile = new CaricamentoFile();
		caricamentoFile.setNameFile("sudoku.txt");
		String [][] valori = new String[9][9];
		for (int i = 0; i < caricamentoFile.getList().size(); i++) {
			String string = caricamentoFile.getList().get(i);
			StringTokenizer tokenizer = new StringTokenizer(string);
			int indiceRiga = Integer.valueOf(tokenizer.nextToken());
			int indiceColonna = Integer.valueOf(tokenizer.nextToken());
			String valore = tokenizer.nextToken();
			valori[indiceRiga][indiceColonna] = valore;
		}
		System.out.println("Il soduku non risolto");
		System.out.println("");
		stampaSudokuErr(valori);
		int[] sommaValori = new int[9];
		calcolaSommaN(valori, sommaValori);
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if(valori[i][j].equalsIgnoreCase(".")){
					valori[i][j] = String.valueOf(45-sommaValori[i]);
				}
			}
		}
		System.out.println("");
		System.out.println("Il soduku risolto");
		System.out.println("");
		stampaSudokuErr(valori);
	}

	private static void calcolaSommaN(String[][] valori, int[] sommaValori) {
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9 ; j++) {
				if(!valori[i][j].equalsIgnoreCase(".")){
				sommaValori[i] += Integer.valueOf(valori[i][j]); 
				}
			}
		}
	}

	private static void stampaSudokuErr(String[][] valori) {
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				System.out.print(valori[i][j]+" ");
				if(j==2 || j==5){
					System.out.print("| ");
				}
				
			}
			System.out.println(" ");
			if(i==2 || i==5){
				for (int h = 0; h < 22; h++) {
					System.out.print("-");
				}
				System.out.println(" ");
			}	
		}
	}
}
